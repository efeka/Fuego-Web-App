@using Models
@model List<Instructor>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text center">
                <h2 class="text-white py-2">Instructor List</h2>
            </div>
        </div>
    </div>
</div>
<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Instructor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Instructor
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Last Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Surname</td>
                <td>@obj.LastPayment</td>
                <td>
                    <div class="d-flex justify-content-between">
                        <a asp-asp-controller="Instructor" asp-action="Edit" asp-route-id="@obj.Id" class="w-75 btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                            <a asp-controller="Instructor" asp-action="Delete" asp-route-id="@obj.Id" class="w-75 btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>